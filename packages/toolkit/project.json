{
  "name": "toolkit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/toolkit",
  "prefix": "sft",
  "projectType": "library",
  "release": {
    "version": {
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": ["scope:toolkit", "type:package"],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/toolkit/ng-package.json",
        "tsConfig": "packages/toolkit/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/toolkit/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "post-build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": [
          "mkdir -p dist/packages/toolkit",
          "cp README.md dist/packages/toolkit/README.md"
        ],
        "cwd": "{workspaceRoot}"
      }
    },
    "nx-release-publish": {
      "dependsOn": ["build", "post-build"],
      "options": {
        "packageRoot": "dist/{projectRoot}",
        "args": ["--json"]
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/toolkit"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
